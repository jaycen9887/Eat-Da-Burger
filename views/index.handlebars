<div class="container">
    <div class="row">
        <div id="ready" class="col s6">
            <h5>Burgers ready to be devoured!</h5>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <div class="row">
                                <div class="col s6">
                                    {{burger_name}}
                                </div>
                                <div class="col s6">
                                    <form action="/{{this.id}}?_method=PUT" method="post">
                                        <input type="hidden" name="devoured" value="true">
                                        <button class="waves-effect wave-light btn" type="submit">Devour!!!</button>
                                    </form> 
                                </div>    
                            </div>    
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div><!-- END READY -->
        <div id="devoured" class="col s6">
            <h5>Burgers that have been devoured!!</h5>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div><!-- END DEVOURED -->
    </div><!-- END ROW -->
    
    <div id="addBurger" class="row">
        <form class="col s12" action="/?method=POST" method="POST">
            <div class="row">
                <div class="input-field col s4 offset-s4">
                    <input placeholder="Burger Name" name="burger" id="burger" type="text">
                </div>
                <div class="input-field col s4">
                    <button class="waves-effect wave-light btn" type="submit">Add</button>
                </div>
            </div>
        </form>
    </div>
    

</div><!-- END CONTAINER -->